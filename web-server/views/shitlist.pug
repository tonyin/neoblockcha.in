doctype html
head
  include head.pug
  link(rel='stylesheet', href='/css/bootstrap-sortable.css')
  link(rel='stylesheet', href='/css/custom.css')
body
  include header.pug
  main
    .jumbotron.bg-dark.text-white
      .container
        h1.display-3.mb-3 shitlist
        .lead
          | Courtesy of 
          a(href="https://discord.gg/R8v48YA") NEO Discord 
          | #market
    .container
      .row.align-items-center.mb-4
        .col-12.col-md-6
          small#last-updated
      table.table.table-hover.sortable
        thead
          tr
            th Coin
            th Shit Date
            th Shit Price
            th Current Price
            th % Return
            th % NEO Return
            th(data-defaultsort="desc") % True Return
        tbody#shits
  footer
    include footer.pug
    script(type='text/javascript', src='/js/bootstrap-sortable.js')
    script(type='text/javascript', src='/js/shitlist.js')
