doctype html
head
  include head.pug
  link(rel='stylesheet', href='/css/bootstrap-sortable.css')
  link(rel='stylesheet', href='/css/custom.css')
body
  main
    .jumbotron.bg-dark.text-white
      .container
        h1.display-3.mb-3 nep5
        .lead
          | Performance of 
          a(href="https://neo.org/dapps") NEO NEP5 coins 
          | since ICOception 
    .container
      .row.align-items-center.mb-4
        .col-12.col-md-6
          small#last-updated
      table.table.table-hover.sortable
        thead
          tr
            th Coin
            th ICOception
            th ICO Price
            th Current Price
            th % Return
            th % NEO Return
            th(data-defaultsort="desc") % True Return
        tbody#nep5
  footer
    include footer.pug
    script(type='text/javascript', src='/js/bootstrap-sortable.js')
    script(type='text/javascript', src='/js/nep5.js')
